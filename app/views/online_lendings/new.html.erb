	
	<div id="lender_error">
		<%= flash[:lender_errors] %>
		<%= flash[:borrower_errors] %>
	</div>
	<div class="container" id="lender">

		<form action="/online_lending/lender" method="post" class=form-signin>
			<h2 class="form-signin-heading">Lender</h2>
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<input type="text" name="lender[first_name]" placeholder="First Name" class="form-control">
			<input type="text" name="lender[last_name]" placeholder="Last Name" class="form-control" required>
			<input type="email" name="lender[email]" placeholder="Email" id="inputEmail" class="form-control" required>
			<input type="password" name="lender[password]" placeholder="Password" id="inputPassword" class="form-control" required>
			<input type="number" name="lender[money]" placeholder="Money" class="form-control" required>
			<button class="btn btn-lg btn-primary btn-block" type="submit">Register</button><br>
			<!-- <input type="submit" value="Register"> -->
			<p><a href="/online_lending/login">Already a Member?</a></p><br>
		</form>
	</div>
	

	<div class="container" id="borrower">
		<form action="/online_lending/borrower" method="post" class="form-signin">
			<h2 class="form-signin-heading">Borrower</h2>
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<input type="text" name="borrower[first_name]" placeholder="First Name" class="form-control">
			<input type="text" name="borrower[last_name]" placeholder="Last Name" class="form-control" required>
			<input type="email" name="borrower[email]" placeholder="Email" id="inputEmail" class="form-control" required>
			<input type="password" name="borrower[password]" placeholder="Password" id="inputPassword" class="form-control" required>
			<input type="text" name="borrower[purpose]" placeholder="need for money" class="form-control" required>
			<textarea name="borrower[description]" placeholder="Description" class="form-control" required></textarea>
			<input type="number" name="borrower[money]" placeholder="Amount Needed" class="form-control" required>
			<button class="btn btn-lg btn-primary btn-block" type="submit">Register</button><br>
			<!-- <input type="submit" value="Register"> -->
			<p class="form"><a href="/online_lending/login">Already a Member?</a></p>
		</form>
	</div>


